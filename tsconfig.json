{
    "compilerOptions": {
      "target": "es2016",
      "module": "commonjs",
      "declaration": true,
      "outDir": "./dist",
      "strict": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "typeRoots": [
        "src/types/**"
      ]
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/__tests__/*"
    ]
}
